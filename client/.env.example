# Vite env vars must start with VITE_
# Copy to .env or .env.local and adjust values per environment.

# Site meta
VITE_SITE_TITLE="Decanter"
VITE_SITE_DESCRIPTION="Personal site built with Vue + Vite"

# API endpoint
VITE_API_BASE_URL="https://api.example.com"

# Feature flags
VITE_ENABLE_MOCK="false"
VITE_ENABLE_ANALYTICS="false"

# Analytics (if any)
VITE_ANALYTICS_ID=""

# --- Backend (Node/Koa) ---
# Server port
PORT=3000

# Skip MongoDB when developing locally
SKIP_DB=true

# MongoDB connection
MONGODB_USERNAME="your_user"
MONGODB_PASSWORD="your_password"
MONGODB_HOST="127.0.0.1"
MONGODB_PORT=27017
MONGODB_DATABASE="your_db"
MONGODB_AUTH_SOURCE="admin" # 如用户创建在 admin，则保持为 admin；否则设为用户所在的数据库
