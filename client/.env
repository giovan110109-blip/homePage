# Vite env vars must start with VITE_
# Copy to .env or .env.local and adjust values per environment.

# Site meta
VITE_SITE_TITLE="Decanter"
VITE_SITE_DESCRIPTION="Personal site built with Vue + Vite"

# API endpoint
VITE_API_BASE_URL="https://serve.giovan.cn"
# Local API endpoint (dev only)
VITE_API_BASE_URL_LOCAL="http://localhost:8999"

VITE_ENABLE_MOCK=false
VITE_ENABLE_ANALYTICS=false

# Analytics (if any)
VITE_ANALYTICS_ID=""


# --- Backend (Node/Koa) ---
# Server port
PORT=8999

# Skip MongoDB when developing locally
SKIP_DB=false

# MongoDB connection
MONGODB_USERNAME=admin
MONGODB_PASSWORD=someone109
MONGODB_HOST=118.24.62.237
MONGODB_PORT=27017
MONGODB_DATABASE=homepage
MONGODB_AUTH_SOURCE=admin

# 优先使用完整连接串，避免参数拼接出错；directConnection 避免 DNS SRV 解析
MONGODB_URI=mongodb://admin:someone109@118.24.62.237:27017/homepage?authSource=admin&directConnection=true
