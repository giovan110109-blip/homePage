# ========================================
# 前端环境变量 (Client)
# ========================================

# Vite 环境变量必须以 VITE_ 开头

# 站点元信息
VITE_SITE_TITLE="Decanter"
VITE_SITE_DESCRIPTION="Personal site built with Vue + Vite"

# API 端点配置
VITE_API_BASE_URL="https://your-api-domain.com"
VITE_API_BASE_URL_LOCAL="http://localhost:8999"

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_ANALYTICS=false

# ========================================
# 后端环境变量 (Server)
# ========================================

# 服务端口
PORT=8999

# 开发环境配置
SKIP_DB=false
NODE_ENV=production

# ========================================
# MongoDB 数据库配置
# ========================================

MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password
MONGODB_HOST=your_mongodb_host
MONGODB_PORT=27017
MONGODB_DATABASE=your_database
MONGODB_AUTH_SOURCE=admin

# MongoDB 连接串（推荐使用完整 URI）
# directConnection=true 避免 DNS SRV 解析问题
MONGODB_URI=mongodb://your_username:your_password@your_mongodb_host:27017/your_database?authSource=admin&directConnection=true

# ========================================
# Docker Compose 配置
# ========================================

# MongoDB 容器配置（仅在使用 docker-compose 中的 MongoDB 时需要）
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_password
# ========================================
# 文件上传配置
# ========================================

# 上传文件保存的本地目录（可以是外接硬盘路径）
UPLOAD_DIR="/path/to/upload/directory"

# 对外暴露的上传文件访问前缀
UPLOAD_BASE_URL="/uploads"