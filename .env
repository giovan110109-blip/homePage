# ========================================
# 前端环境变量 (Client)
# ========================================

# Vite 环境变量必须以 VITE_ 开头

# 站点元信息
VITE_SITE_TITLE="Giovan"
VITE_SITE_DESCRIPTION="万事顺意"

# API 端点配置
VITE_API_BASE_URL="https://serve.giovan.cn"
VITE_API_BASE_URL_LOCAL="http://localhost:8998"

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_ANALYTICS=false

# ========================================
# 后端环境变量 (Server)
# ========================================

# 服务端口
PORT=8998

# 开发环境配置
SKIP_DB=false
NODE_ENV=development

# ========================================
# MongoDB 数据库配置
# ========================================

MONGODB_USERNAME=admin
MONGODB_PASSWORD=someone109
MONGODB_HOST=118.24.62.237
MONGODB_PORT=27017
MONGODB_DATABASE=homepage
MONGODB_AUTH_SOURCE=admin

# MongoDB 连接串（推荐使用完整 URI）
# directConnection=true 避免 DNS SRV 解析问题
MONGODB_URI=mongodb://admin:someone109@118.24.62.237:27017/homepage?authSource=admin&directConnection=true

# ========================================
# Docker Compose 配置
# ========================================

# MongoDB 容器配置（仅在使用 docker-compose 中的 MongoDB 时需要）
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_password
# ========================================
# 文件上传配置
# ========================================

# 上传文件保存的本地目录
# 本地开发环境使用外接硬盘真实路径
# Docker 容器环境将通过 volumes 挂载，容器内使用 /app/uploads
UPLOAD_DIR="/Volumes/大金刚/uploads"

# 对外暴露的上传文件访问前缀
UPLOAD_BASE_URL="/uploads"

# ========================================
# 高德地理编码配置
# ========================================

# 高德 API Key（用于地址搜索和反向地理编码）
AMAP_KEY="b4530a90e7c46fa0f9720d9e414145aa"

# ========================================
# 上传队列配置
# ========================================

# 上传并发数（默认 4，推荐范围 2-8）
# M4 芯片建议 4-6
UPLOAD_CONCURRENCY=5


WECHAT_APPID=wxb675dcbbf72a1cfe
WECHAT_SECRET=d831a0360a8c805946962bf7ac8cae30

# Cluster 模式：true 启用，false 禁用
CLUSTER_MODE=true

# ========================================
# Redis 缓存配置
# ========================================

# Redis 主机地址（Docker 环境使用容器名 redis）
REDIS_HOST=redis

# Redis 端口
REDIS_PORT=6379

# Redis 密码（如果设置了密码）
REDIS_PASSWORD=

# Redis 数据库编号
REDIS_DB=0

# 是否启用缓存（true 启用，false 禁用）
CACHE_ENABLED=false

# ========================================
# CDN 加速配置
# ========================================

# 是否启用 CDN（true 启用，false 禁用）
CDN_ENABLED=false

# CDN 基础 URL（启用 CDN 时使用）
CDN_BASE_URL=https://cdn.giovan.cn

# 本地资源 URL（禁用 CDN 时使用）
LOCAL_BASE_URL=https://serve.giovan.cn