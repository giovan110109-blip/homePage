# ========================================
# 前端环境变量 (Client)
# ========================================

# Vite 环境变量必须以 VITE_ 开头

# 站点元信息
VITE_SITE_TITLE="Giovan"
VITE_SITE_DESCRIPTION="万事顺意"

# API 端点配置
VITE_API_BASE_URL="https://serve.giovan.cn"
VITE_API_BASE_URL_LOCAL="http://localhost:8998"

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_ANALYTICS=false

# 分析工具 ID（可选）
VITE_ANALYTICS_ID=""

# ========================================
# 后端环境变量 (Server)
# ========================================

# 服务端口
PORT=8998

# 开发环境配置
SKIP_DB=false
NODE_ENV=development

# ========================================
# MongoDB 数据库配置
# ========================================

MONGODB_USERNAME=admin
MONGODB_PASSWORD=someone109
MONGODB_HOST=118.24.62.237
MONGODB_PORT=27017
MONGODB_DATABASE=homepage
MONGODB_AUTH_SOURCE=admin

# MongoDB 连接串（推荐使用完整 URI）
# directConnection=true 避免 DNS SRV 解析问题
MONGODB_URI=mongodb://admin:someone109@118.24.62.237:27017/homepage?authSource=admin&directConnection=true

# ========================================
# Docker Compose 配置
# ========================================

# MongoDB 容器配置（仅在使用 docker-compose 中的 MongoDB 时需要）
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_password
# ========================================
# 文件上传配置
# ========================================

# 上传文件保存的本地目录
# 本地开发环境使用外接硬盘真实路径
# Docker 容器环境将通过 volumes 挂载，容器内使用 /app/uploads
UPLOAD_DIR="/Volumes/大金刚/uploads"

# 对外暴露的上传文件访问前缀
UPLOAD_BASE_URL="/uploads"

# ========================================
# 高德地理编码配置
# ========================================

# 高德 API Key（用于地址搜索和反向地理编码）
AMAP_KEY="b4530a90e7c46fa0f9720d9e414145aa"

# ========================================
# 上传队列配置
# ========================================

# 上传并发数（默认 4，推荐范围 2-8）
# M4 芯片建议 4-6
UPLOAD_CONCURRENCY=4